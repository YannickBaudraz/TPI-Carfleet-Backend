{
  "name": "tpicarfleet_backend",
  "version": "1.0.0",
  "description": "Car fleet management back-end",
  "main": "program.js",
  "repository": "git@github.com:/NicolasGlassey/TPICarfleet_Backend.git",
  "author": "yannick.baudraz@cpnv.ch",
  "private": "true",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/program.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prettier": "prettier ./src/**/*.ts --config .prettierrc --check",
    "prettier:format": "prettier ./src/**/*.ts --config .prettierrc --write",
    "validate": "npm run prettier && npm run lint",
    "generate:doc": "compodoc --config compodocrc.json"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.26",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "2.2.1",
    "typescript": "^4.1.5"
  }
}
